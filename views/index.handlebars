<div class="container">
  <div class="jumbotron-fluid text-center mb-5">
    <h1 class="heading big-font" id="heading-text">Eat A Burger!</h1>
    <img class="heading" id="heading-burger" src="/assets/img/burger2.png" alt="Burger Image">
  </div>
  <div class="main col-12 text-center">
    <div class="row row1 mb-5">
      <div class="col-6">
        <h2 class="big-font">Ready to Eat!</h2>
        <ul>
          {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=false}} {{/unless}} {{/each}}
        </ul>
      </div>
      <div class="col-6">
        <h2 class="big-font">Already Devoured</h2>
        <ul class="devoured">
          {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=true}} {{/if}} {{/each}}
        </ul>
      </div>
    </div>
    <div class="row row2">
      <div class="col-12 text-center">
        <h2 class="big-font">Add a Burger</h2>
        <form class="create-form">
          <div class="form-group">
            <label for="burger-label">Burger Name:</label>
            <input type="text" id="burger-input" name="name">
            <button type="submit" class="btn btn-primary ml-3">Add Burger</button>
          </div>
        </form>
      </div>
    </div>
  </div>


</div>