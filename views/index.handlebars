<div class="container">
  <div class="jumbotron-fluid mx-auto">
    <h1 class="heading">Eat A Burger!</h1>
    <img class="heading" id="burger" src="/assets/img/burger2.png" alt="Burger Image">
  </div>
  <div class="main col-12">
    <div class="row row1">
      <div class="col-6">
        <h2>Ready to Eat!</h2>
        <ul>
          {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=false}} {{/unless}} {{/each}}
        </ul>
      </div>
      <div class="col-6">
        <h2>Already Devoured</h2>
        <ul>
          {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=true}} {{/if}} {{/each}}
        </ul>
      </div>
    </div>
    <div class="row row2">
      <div class="col12">
      <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="burger-label">Burger Name:</label>
          <input type="text" id="burger-input" name="name">
        </div>
        <button type="submit" class="btn btn-primary">Add Burger</button>
      </form>
      </div>
    </div>
  </div>


</div>