<h1>Eat A Burger!</h1>

<h2>Ready to Eat!</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Already Devoured</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="burger-label">Burger Name:</label>
    <input type="text" id="burger-input" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>
